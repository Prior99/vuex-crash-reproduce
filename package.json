{
    "scripts": {
        "test": "jest"
    },
    "jest": {
        "collectCoverage": true,
        "moduleFileExtensions": [
            "ts",
            "js",
            "vue"
        ],
        "testMatch": [
            "<rootDir>/src/__tests__/test-*.ts"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest",
            "^.+\\.vue$": "vue-jest"
        },
        "coverageReporters": [
            "lcov",
            "text-summary"
        ]
    },
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "@vue/test-utils": "^1.0.0-beta.16",
        "jest": "^23.1.0",
        "ts-jest": "^22.4.6",
        "typescript": "^2.6.2",
        "vue": "^2.5.16",
        "vue-jest": "^2.6.0",
        "vuex": "^2.5.0",
        "vuex-class": "^0.3.0"
    },
    "dependencies": {
        "vue-property-decorator": "^7.0.0",
        "vue-template-compiler": "^2.5.16"
    }
}
